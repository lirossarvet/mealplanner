<h1>Show Recipe</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @recipe.title %>
  </li>

  <li>
    <strong>Ingredients:</strong>
    <%= @recipe.ingredients %>
  </li>

  <li>
    <strong>Source:</strong>
    <%= @recipe.source %>
  </li>

  <li>
    <strong>Directions:</strong>
    <%= @recipe.directions %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.recipe_path(@conn, :edit, @recipe) %></span>
<span><%= link "Back", to: Routes.recipe_path(@conn, :index) %></span>
